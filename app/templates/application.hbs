<div id="header">
  {{#bs-navbar type=(if inverse 'inverse') fluid=fluid collapsed=collapsed onCollapse=(action (mut collapsed) true) onExpand=(action (mut collapsed) false) as |navbar|}}
    <div class="navbar-header">
      {{navbar.toggle}}
      {{#link-to "index" class="navbar-brand"}}Home{{/link-to}}
    </div>
    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#nav.item}}{{#link-to 'employee' }} Employee {{/link-to}}{{/nav.item}}
        {{#nav.item}}
           {{#if session.isAuthenticated}}
            <a {{action 'invalidateSession'}}>Logout</a>
          {{else}}
            {{#link-to 'login' }} Login {{/link-to}}
          {{/if}}
        {{/nav.item}}
        {{#nav.item}}
          {{#if userService.currentUser }}
          <a href="" style="color:blue">  Signed in as  {{userService.currentUser.name}}    </a>
              {{/if}}
        {{/nav.item}}
        {{#nav.item}}
          {{#if userService.currentUser }}
            {{#link-to 'register' }} Register {{/link-to}}
          {{/if}}
        {{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}
</div>

<div id="maincontainer">
  {{outlet}}
</div>
